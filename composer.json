{
    "name": "ylorant/twitch-php-client",
    "description": "PHP client for Twitch's multiple APIs, easily extendable and embeddable.",
    "version": "1.2",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "TwitchClient\\": "src/",
            "TwitchClient\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.0.0",
        "ext-curl": "*",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2",
        "league/climate": "^3.4",
        "fzaninotto/faker": "^1.7",
        "monolog/monolog": "^1.23",
        "phpunit/php-code-coverage": "^6.0"
    },
    "scripts": {
        "test": "phpunit",
        "phpdbg-test": "phpdbg -qrr ./vendor/phpunit/phpunit/phpunit"
    }
}
